<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--shadow top left-->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape

            android:shape="rectangle">
            <gradient
                android:endColor="#42DFCC"
                android:startColor="#7DE981" />
            <corners
                android:bottomRightRadius="28dp"
                android:topLeftRadius="28dp"
                />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" />
            <corners
                android:bottomRightRadius="28dp"
                android:topLeftRadius="28dp"
                />
        </shape>
    </item>

    <!--shadow bottom right-->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#42DFCC"
                android:startColor="#7DE981" />
            <corners
                android:bottomRightRadius="28dp"
                android:topLeftRadius="28dp"
                />
        </shape>
    </item>
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#26000000" />
            <corners
                android:bottomRightRadius="28dp"
                android:topLeftRadius="28dp"
                />
        </shape>
    </item>

    <!--main gradient-->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#42DFCC"
                android:startColor="#7DE981" />
            <corners
                android:bottomRightRadius="28dp"
                android:topLeftRadius="28dp"
                />
        </shape>
    </item>
</layer-list>