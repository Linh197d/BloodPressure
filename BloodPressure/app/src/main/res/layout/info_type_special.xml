            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_type_name_5"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="6dp"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/color_type_6"
            android:background="@drawable/rounded_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="14dp"
            app:layout_constraintRight_toLeftOf="@id/tv_type_name_6"
            android:backgroundTint="@color/color_hypertension" />

        <TextView
            android:layout_marginStart="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hypertensive"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/tv_type_name_6"
            app:layout_constraintBottom_toTopOf="@id/tv_type_detail_6"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/color_type_6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_type_name_6"
            android:id="@+id/tv_type_detail_6"
            android:text="@string/intros_hypertensive"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_type_name_6"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>